    function ubicarFila(item_actual){

        $('#tablaHorarios').find('tr').eq(item_actual).addClass('activa');

        var w = $(window);
        var row = $('#tablaHorarios').find('tr').eq(item_actual);
   
  
         if (row.length){
           w.scrollTop( row.offset().top - (w.height()/2) );
          }
    }


