                                            <tr  >
                                                
                                                    <td>
                                                        @item.empresa
                                                    </td>

                                                    <td>
                                                        @item.nro_legajo
                                                    </td>
                                                    <td>
                                                        @item.apellido
                                                    </td>
                                                    <td>
                                                        @item.nombre
                                                    </td>
                                                    <td> 
                                                        @Convert.ToDateTime(@item.fecha).ToString("dd/MM/yyyy")
                                                    </td>
                                                    <td>
                                                        @item.hora_desde
                                                    </td>
                                                    <td>
                                                        @item.primera_fichada
                                                    </td>
                                                    <td>
                                                        @item.descuento
                                                    </td>
                               
                                            </tr>

                                    }
                                    </tbody>
                    </table>
                  </div>
                </div>
             </div>
            }
                   
             </div>
             </center>


        </div>

    </form>


