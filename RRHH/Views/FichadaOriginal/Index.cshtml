@model IEnumerable<RRHH.Models.FichadaOriginal>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "~/Views/Shared/_LayoutVacia.cshtml"; }
@{
    ViewBag.Title = "Index";
    var sin_excluidos =  (int) ViewData["SIN_EXCLUIDOS"];

}


<form  >
 <div class="container">
     <div class="jumbotron text-center Titulo">
            @if (@sin_excluidos ==0)
            {
                 <h2>Fichadas originales</h2>
            }
            else
            {
                @if (@sin_excluidos == 1)
                {
                 <h2>Fichadas sin duplicados</h2>
                }
                else
                {
                  <h2></h2>
                }
            }
           
    </div>

      <center>
     <div class="row">
            <div class="col bottom-buffer">
                <span id="spanTitulo"></span>
            </div>
        </div>

        <div class="row">
          <div class="col bottom-buffer">
                @ViewData["NroLegajo"] -  @ViewData["Apellido"],  @ViewData["Nombre"] (  @ViewData["Empresa"])
          </div>
        </div>
     

       <div class="row" style="margin-bottom:10px;">
              <div class="col bottom-buffer">
                  <div style="background-color: white ; padding: 10px; border: 1px solid black; text-align:center;">
                  <span>Cantidad encontrada: @Model.Count()</span>    
              </div>
          </div>
       </div>      


        <div class="row">
            <div class="col bottom-buffer">
                <div class="table-responsive">


                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Equipo</th>
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (var item in Model)
                     {
                     <tr>
                   
                     
                      <td>
                          @Convert.ToDateTime(item.fcd_fchr).ToString("dd/MM/yyyy HH:mm:ss")           
                     </td>    
                        
                      <td>
                          @item.taes_id     
                     </td>   
                     <td>
                          @item.lectora
                     </td>

                    </tr>  
                    
                 }
                 </tbody>
                </table>
              </div>
            </div>
         </div>

       @* <div class="row " id="divInsertar">
         <div class="col bottom-buffer">
             <a  asp-controller="Fichada" asp-action="Index"   class="btn btn-outline-danger"  >Salir</a>
         </div>
        </div>*@
        
        </center>


    </div>

    

</form>



@if (ViewBag.Message != null)
{
        <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
        </script>
}