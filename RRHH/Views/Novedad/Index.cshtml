@model IEnumerable<RRHH.Models.Novedad>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Index";
    var _perfil_id = @HttpContextAccessor.HttpContext.Session.GetInt32("PERFIL_ID");
}


 <form asp-action="Index" method="post">
     

         

 <div class="container">
     <div class="jumbotron text-center Titulo bottom-buffer ">
      <h2>Novedades</h2>
    </div>

      <center>

             <div class="d-flex justify-content-center align-items-center container ">


                <div class="input-group mb-3">
                   <span class="input-group-text">Categoría</span>            
                    <select  class="form-control" name="categoria_novedad_id" id="categoria_novedad_id" ></select>       
                     <span class="input-group-text">Tipo</span>            
                    <select  class="form-control" name="tipo_novedad_id" id="tipo_novedad_id" ></select>   
                     <span class="input-group-text">Resolución</span>            
                    <select  class="form-control" name="tipo_resolucion_id" id="tipo_resolucion_id" ></select>              
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center container ">
               <div class="input-group mb-3">
                  <span class="input-group-text">Empresa</span>            
                  <select  class="form-control" name="empresa_id" id="empresa_id" value="@ViewData["EmpresaActual"]" ></select>           
		          <span class="input-group-text">Legajo:</span>
                  <input name="nro_legajo" id="nro_legajo" value="@ViewData["LegajoActual"]" type="number" class="form-control" />   
                  <span class="input-group-text">Apellido:</span>
                  <input name="apellido" id="apellido" value="@ViewData["ApellidoActual"]" class="form-control" />                                          
              </div>
            </div>
             
            <div class="d-flex justify-content-center align-items-center container ">

                <div class="input-group mb-3">
                     <span class="input-group-text">Desde:</span>
                      <input type="text" id="txtSelectedFechaNovedadDesde" name="fecha_novedad_desde"   readonly="readonly"/>
                      <span class="input-group-text">Hasta:</span>
                      <input type="text" id="txtSelectedFechaNovedadHasta" name="fecha_novedad_hasta"  readonly="readonly"/>
                      <input type="submit" value="Buscar" class="btn btn-outline-primary" />
                </div>
            </div>




     <div class="row">
            <div class="col bottom-buffer">
                <span id="spanTitulo"></span>
            </div>
        </div>

          <div class="row bottom-buffer">
              <div class="col bottom-buffer">
                 <div class="btns2">             
                    @if (_perfil_id <= 2)
                    {
                        <a type="button" id="cmdNuevo" class="btn btn-outline-primary" asp-controller="Novedad" asp-action="Edit" asp-route-modo="A"  asp-route-nro_legajo="@ViewData["LegajoActual"]" asp-route-empresa_id="@ViewData["EmpresaActual"]" asp-route-ubicacion_id="@ViewData["UbicacionActual"]" asp-route-sector_id="@ViewData["SectorActual"]" asp-route-local_id="@ViewData["LocalActual"]">INGRESAR NOVEDAD</a>
                    }
                    <input type="submit" asp-action="ExportarExcel" value="Exportar a Excel" class="btn btn-outline-primary" />
@*                  <input type="submit" asp-action="ExportarPDF" value="Exportar a PDF" class="btn btn-outline-primary" />
*@
                 </div>
              </div>
          </div>
    

       @* <div class="d-flex justify-content-center align-items-center container ">
            <div class="row">
                <div class="col bottom-buffer badge bg-secondary">
                    <span id="spanCantidad" class="BarraCantidad">Cantidad  de usuarios: @Model.Count()</span>
                </div>
            </div>
        </div>*@

        <div class="row">
            <div class="col bottom-buffer">
                <div class="table-responsive">


                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nro. Legajo</th>
                            <th>Apellido</th>
                            <th>Nombre</th>
                            <th>Ubicacion</th>
                            <th>Sector/Local</th>
                            <th>Responsable</th>
                            <th>Fecha Novedad</th>
                            <th>Categoría Novedad</th>
                            <th>Tipo Novedad</th>
                            <th>Fecha Resolución</th>
                            <th>Tipo Resolución</th>
                            <th>Observaciones</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (var item in Model)
                     {
                     <tr>
                      <td>
                          @item.nro_legajo
                     </td>
                     <td>
                          @item.apellido
                     </td>
                     <td>
                          @item.nombre
                     </td>
                     <td>
                          @item.ubicacion
                     </td>
                     <td>
                          @if (@item.ubicacion_id==1 || @item.ubicacion_id==2 )
                           {
                             @item.sector
                           }
                           else
                           {
                             @item.local
                           }
                     </td>
                     <td>
                          @item.responsable
                     </td>
                      <td>
                          @Convert.ToDateTime(item.fecha_novedad).ToString("dd/MM/yyyy")
                     </td>
                     <td>
                          @item.categoria_novedad
                     </td>
                     <td>
                          @item.tipo_novedad
                     </td>
                      <td>
                          @{
                             if (item.fecha_resolucion!=null) {
                                        @Convert.ToDateTime(item.fecha_resolucion).ToString("dd/MM/yyyy")
                             }
                            }
                     </td>
                     <td>
                          @item.tipo_resolucion
                     </td>
                     <td>
                          @item.observacion
                     </td>

                     <td>
                        <td>
                          <a asp-controller="Novedad" asp-action="Edit" asp-route-modo="E" asp-route-id=@item.id><i data-mdb-toggle='tooltip' title='Editar la novedad' class='bi bi-pencil-square'></i></a>
                           @if (_perfil_id <= 2)
                           {
                             <a onclick="mostrarModalEliminar('@item.id');" ><i data-mdb-toggle='tooltip' title='Eliminar la novedad'  class='bi bi-x-circle'></i></a>
                           }
                    </td>
                    </tr>  
                    
                 }
                 </tbody>
                </table>
              </div>
            </div>
         </div>

         </center>



    <!-- Modal Eliminar Novedad -->

    <div class="modal fade" id="mdEliminar" tabindex="-1" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
              
                        <div class="modal-header">
                            <h5 class="modal-title">Novedad</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>


                        <div class="modal-body">
                            Se eliminará la novedad con todos sus datos. Está seguro?
                             <input id="hfID" name="hfID" type="hidden" >
                        </div>
                        <div class="modal-footer">
                             <button id="btnEliminar" type="submit" asp-action="Delete" value="" class="btn btn-outline-success"  >SI</button>
                             <a class="btn btn-outline-danger" data-bs-dismiss="modal" >NO</a>
                        </div>
          

            </div>
        </div>
    </div>
    </div>

</form>


 <script type="text/javascript">

$(document).ready(function() {
    var FechaNovedadDesde = @Html.Raw(Json.Serialize(ViewData["FechaNovedadDesdeActual"]));
    var FechaNovedadHasta = @Html.Raw(Json.Serialize(ViewData["FechaNovedadHastaActual"]));

    if ($("#nro_legajo").val() <=0) 
    {
        $("#nro_legajo").val('');
    }

    ObtenerEmpresas();
    ObtenerCategoriasNovedad();
    ObtenerTiposNovedad();
    ObtenerTiposResolucion();

       $('#txtSelectedFechaNovedadDesde').datepicker({format: 'dd/mm/yyyy' });
        $('#txtSelectedFechaNovedadHasta').datepicker({format: 'dd/mm/yyyy' });

        if (FechaNovedadDesde==null)
          $('#txtSelectedFechaNovedadDesde').datepicker('setDate', "-0d");
        else 
          $('#txtSelectedFechaNovedadDesde').datepicker('setDate',FechaNovedadDesde);

        if (FechaNovedadHasta==null)
          $('#txtSelectedFechaNovedadHasta').datepicker('setDate', "-0d");
        else 
          $('#txtSelectedFechaNovedadHasta').datepicker('setDate',FechaNovedadHasta);


});

var ObtenerEmpresas = function () {
             var CodEmpresa =@Html.Raw(Json.Serialize(ViewData["EmpresaActual"]));
             $.ajax({
                url: '@Url.Action("ObtenerEmpresas","Legajo")',
                type: 'GET',
                data: {
                },
                success: function (data) {
                    $('#empresa_id').find('option').remove()
                    $(data).each(
                        function (index, item) {            
                            if (item.value==CodEmpresa)
                              $('#empresa_id').append('<option value="' + item.value + '" selected>' + item.text + '</option>')
                            else 
                              $('#empresa_id').append('<option value="' + item.value + '">' + item.text + '</option>')                        
                        });
                },
                error: function () {
                }
          });
        }

 var ObtenerCategoriasNovedad = function () {
       var CodCategoria =@Html.Raw(Json.Serialize(ViewData["CategoriaNovedadActual"]));
         $.ajax({
            url: '@Url.Action("ObtenerCategoriasNovedad","Novedad")',
            type: 'GET',
            success: function (data) {
                $('#categoria_novedad_id').find('option').remove()
                $(data).each(
                    function (index, item) {            
                        if (item.value==CodCategoria)
                          $('#categoria_novedad_id').append('<option value="' + item.value + '" selected>' + item.text + '</option>')
                        else 
                          $('#categoria_novedad_id').append('<option value="' + item.value + '">' + item.text + '</option>')                        
                    });
            },
            error: function () {
            }
      });
    }

    var ObtenerTiposNovedad = function () {
         var CodTipo =@Html.Raw(Json.Serialize(ViewData["TipoNovedadActual"]));
         $.ajax({
            url: '@Url.Action("ObtenerTiposNovedad","Novedad")',
            type: 'GET',
            success: function (data) {
                $('#tipo_novedad_id').find('option').remove()
               $(data).each(
                    function (index, item) {            
                        if (item.value==CodTipo)
                          $('#tipo_novedad_id').append('<option value="' + item.value + '" selected>' + item.text + '</option>')
                        else 
                          $('#tipo_novedad_id').append('<option value="' + item.value + '">' + item.text + '</option>')                        
                    });
            },
            error: function () {
            }
      });
    }

        var ObtenerTiposResolucion = function () {
          var CodTipo =@Html.Raw(Json.Serialize(ViewData["TipoResolucionActual"]));
         $.ajax({
            url: '@Url.Action("ObtenerTiposResolucion","Novedad")',
            type: 'GET',
            success: function (data) {
                $('#tipo_resolucion_id').find('option').remove()
                $(data).each(
                    function (index, item) {            
                        if (item.value==CodTipo)
                          $('#tipo_resolucion_id').append('<option value="' + item.value + '" selected>' + item.text + '</option>')
                        else 
                          $('#tipo_resolucion_id').append('<option value="' + item.value + '">' + item.text + '</option>')                        
                    });
            },
            error: function () {
            }
      });
    }

    function mostrarModalEliminar(nro_legajo){
      $("#hfID").val(nro_legajo);
      $("#mdEliminar").modal('show');
     }

     $(function () {
      $('#txtSelectedFechaNovedadDesde').datepicker({
        changeMonth: true,
        changeYear: true,
        format: "dd/mm/yyyy",
        language: "es"
        });
     });

     
     $(function () {
      $('#txtSelectedFechaNovedadHasta').datepicker({
        changeMonth: true,
        changeYear: true,
        format: "dd/mm/yyyy",
        language: "es"
        });

     });
</script>
