      $("#concepto").val("");
      $("#divConcepto").show();

      $("#dias").val("");
      $("#divDias").show();


      $("#observacion").val("");
      $("#divObservacion").show();

      return;   
    }

    
    function habilitar_sanciones() {

      $("#divTipoNovedad").show();
      $("#divFechaNovedad").show();

      $("#divTipoResolucion").show();
      $("#divFechaResolucion").show();

      $("#divConcepto").show();

      $("#divDias").show();


