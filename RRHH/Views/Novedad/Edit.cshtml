@model RRHH.Models.Novedad
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Novedad";
    var _perfil_id = @HttpContextAccessor.HttpContext.Session.GetInt32("PERFIL_ID");
    var _origen = (string)ViewData["ORIGEN"];
}

<form  method="post">
<div class="container">
<h2>Novedad</h2>

            <div class="row">
                  <div class="col bottom-buffer">
                     <label asp-for="empresa_id" class="control-label">Empresa</label>
                     <select  class="form-control" id="empresa_id" asp-for="empresa_id" ></select>
                     <span class="alert-danger" asp-validation-for="empresa_id"></span>
                  </div>
            </div>

       
            <div class="row ">
                <div class="col bottom-buffer">
                  <label asp-for="nro_legajo" class="control-label">Nro. Legajo</label>
                  <input asp-for="nro_legajo" id="nro_legajo" name="nro_legajo" type="number" class="form-control" />
                  <span class="alert-danger" asp-validation-for="nro_legajo"></span>
                </div>
                <div class="col bottom-buffer">
                  <label asp-for="nombre" id="nombre" name="nombre" class="control-label"></label> <label asp-for="apellido" id="apellido" name="apellido" class="control-label"></label>
                </div>

            </div>

            <div class="row">
              <div class="col bottom-buffer">
                     <label asp-for="ubicacion_id" class="control-label">Ubicación</label>
                     <select  class="form-control" id="ubicacion_id" asp-for="ubicacion_id" ></select>
                     <span class="alert-danger" asp-validation-for="ubicacion_id"></span>
              </div>
           
               <div class="row">
                   <div class="col bottom-buffer" id="divSector">
                     <label asp-for="sector_id" class="control-label">Sector</label>
                     <select  class="form-control" id="sector_id" asp-for="sector_id" ></select>
                     <span class="alert-danger" asp-validation-for="sector_id"></span>
                  </div>
                  <div class="col bottom-buffer" id="divLocal">
                     <label asp-for="local_id" class="control-label">Local</label>
                     <select  class="form-control" id="local_id" asp-for="local_id" ></select>
                     <span class="alert-danger" asp-validation-for="local_id"></span>
                  </div>
                </div>


              <div class="col bottom-buffer">
                     <label asp-for="responsable_id" class="control-label">Responsable</label>
                     <select  class="form-control" id="responsable_id" asp-for="responsable_id" ></select>
                     <span class="alert-danger" asp-validation-for="responsable_id"></span>
              </div>
            </div>

            <div class="row">
              <div class="col bottom-buffer">
                     <label asp-for="categoria_novedad_id" class="control-label">Categoría Novedad</label>
                     <select  class="form-control" id="categoria_novedad_id" asp-for="categoria_novedad_id" ></select>
                     <span class="alert-danger" asp-validation-for="categoria_novedad_id"></span>

            </div>

            <div class="col bottom-buffer" id="divTipoNovedad">
                 <label asp-for="tipo_novedad_id" class="control-label">Tipo Novedad</label>
                 <select  class="form-control" id="tipo_novedad_id" asp-for="tipo_novedad_id" ></select>
                  <span class="alert-danger" asp-validation-for="tipo_novedad_id"></span>
              </div>

             <div class="col bottom-buffer btns2" id="divFechaNovedad">
                      <label asp-for="fecha_novedad" class="control-label">Fecha Novedad</label><br />
                      <input type="text" id="txtSelectedFechaNovedad" name="fecha_novedad"  asp-for="fecha_novedad" readonly="readonly"/>

             </div>
           </div>

           <div class="row">
             

              <div class="col bottom-buffer"  id="divTipoResolucion">
                 <label asp-for="tipo_resolucion_id" class="control-label">Tipo Resolución</label>
                 <select  class="form-control" id="tipo_resolucion_id" asp-for="tipo_resolucion_id"  ></select>
                  <span class="alert-danger" asp-validation-for="tipo_resolucion_id"></span>
              </div>

           
              <div class="col bottom-buffer btns2" runat="server" id="divFechaResolucion">
                      <label asp-for="fecha_resolucion" class="control-label">Fecha Resolución</label><br />
                      <input type="text" id="txtSelectedFechaResolucion" name="fecha_resolucion"  asp-for="fecha_resolucion" readonly="readonly"/>
             </div>
           </div>


          <div class="row">
             <div class="col bottom-buffer"  id="divConcepto">
                <label asp-for="concepto" class="control-label">Concepto</label>
                <input asp-for="concepto" type="number" class="form-control"  id="concepto"/>
                <span class="alert-danger" asp-validation-for="concepto"></span>
            </div>

              <div class="col bottom-buffer"  id="divDias">
                <label asp-for="dias" class="control-label">Días</label>
                <input asp-for="dias" type="number" class="form-control" id="dias" />
                <span class="alert-danger" asp-validation-for="dias"></span>
              </div>
           </div>

           
          <div class="row">
             <div class="col bottom-buffer"  id="divObservacion">
                <label asp-for="observacion" class="control-label">Observación</label>
                <input asp-for="observacion" class="form-control" id="observacion" />
                 <span class="alert-danger" asp-validation-for="observacion"></span>
             </div>
          </div>

           <div class="row " id="divInsertar">
                <div class="col bottom-buffer">

                      <a  value=""  class="btn btn-outline-danger" onclick="mostrarModalSalida();" >Salir</a>

                       @if (_perfil_id <=3) {
                        <a  value=""  class="btn btn-outline-danger" onclick="mostrarModalGrabar();" >Grabar</a>
@*                         <button id="btnGrabar" type="submit" asp-route-modo=@ViewData["MODO"] class="btn btn-outline-success">Grabar</button>
*@                       }
                </div>
                 <div class="col bottom-buffer">
                     Ultima modificación: @Model.usuario (@Model.fecha_alta)
                 </div>
            </div>
   




  <!-- Modal Grabar -->
<div class="modal fade" id="mdGrabar" tabindex="-1" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Legajo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Confirma los cambios hechos?
      </div>
      <div class="modal-footer">
          <button type="submit" asp-route-modo=@ViewData["MODO"] class="btn btn-outline-success"  data-bs-dismiss="modal" >SI</button>
          <a class="btn btn-outline-danger" data-bs-dismiss="modal" >NO</a>
      </div>
    </div>
  </div>
</div>



<!-- Modal Salir -->
<div class="modal fade" id="mdSalir" tabindex="-1" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Novedad</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Se perderán los cambios efectuados. Está seguro?
      </div>
      <div class="modal-footer">
       @if (_origen=="L") {
          <a asp-controller="legajo" asp-action="Index"  class="btn btn-outline-success"  Text="SI">SI</a>
       }
       else {
          <a asp-action="Index" class="btn btn-outline-success"  Text="SI">SI</a>
       }

       
        <a class="btn btn-outline-danger" data-bs-dismiss="modal" >NO</a>
      </div>
    </div>
  </div>
</div>
</div>
 </form>


