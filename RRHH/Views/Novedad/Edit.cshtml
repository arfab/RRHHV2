    }


    function felicitaciones() {
      $("#tipo_novedad_id").val(-1);
      $("#divTipoNovedad").show();
      $("#divFechaNovedad").show();

      $("#tipo_resolucion_id").val(-1);
      $("#divTipoResolucion").hide();
      $("#divFechaResolucion").hide();

      $("#concepto").val("");
      $("#divConcepto").show();

      $("#dias").val("");
      $("#divDias").hide();

      
      $("#observacion").val("");
