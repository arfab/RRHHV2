        $('#txtSelectedFechaResolucion').datepicker({format: 'dd/mm/yyyy' });

        if(FechaNovedad==null) $('#txtSelectedFechaNovedad').datepicker('setDate', "-0d");
        if(FechaResolucion==null) $('#txtSelectedFechaResolucion').datepicker('setDate', "-0d");

   })

    function habilitar() {

      $("#divTipoNovedad").hide();
      $("#divFechaNovedad").hide();

      $("#divTipoResolucion").hide();
      $("#divFechaResolucion").hide();

      $("#divConcepto").hide();

      $("#divDias").hide();


      $("#divObservacion").show();

      if ($("#divTipoResolucion") >0) 
         $("#divFechaResolucion").show();
      else 
