    }

     function habilitar_felicitaciones() {

      $("#divTipoNovedad").show();
      $("#divFechaNovedad").show();

      $("#divTipoResolucion").hide();
      $("#divFechaResolucion").hide();

      $("#divConcepto").show();

      $("#divDias").hide();


      $("#divObservacion").show();

      if ($("#divTipoResolucion") >0) 
         $("#divFechaResolucion").show();
      else 
         $("#divFechaResolucion").hide();

      return;   
    }

    function habilitar_grabar() {
       var estado = true;
     

       //if ($("#nro_legajo").val() <=0) estado=false;
       //if ($("#apellido").text() == '') estado=false;
       //if ($("#nombre").text() == '') estado=false;
