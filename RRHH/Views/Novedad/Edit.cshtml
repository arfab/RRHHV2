    var ObtenerLegajo = function (empresa_id, nro_legajo) {
         $.ajax({
            url: '@Url.Action("ObtenerLegajo","Novedad")',
            type: 'GET',
            contentType: 'application/json',
            dataType: 'json',
            data: {
                empresa_id: empresa_id,
                nro_legajo: nro_legajo
            },
            success: function (data) {
                $('#apellido').text(data.apellido);
                $('#nombre').text(data.nombre);
                $('#ubicacion_id').val(data.ubicacion_id);
                $('#ubicacion_id').change();
               // $('#ubicacion_id').trigger("change");

                if ($('#ubicacion_id').val() == 1 || $('#ubicacion_id').val() == 2) {
                    ObtenerSectores($('#ubicacion_id').val(),data.sector_id);
                    //$('#sector_id').val(data.sector_id);
                    //$('#sector_id').change();
                    $("#divSector").show();
                    $("#local_id").val(-1);
                    $("#divLocal").hide();  
                }       
                else {
                    ObtenerLocales(data.local_id);
