     $("#nro_legajo").change(function () {
         ObtenerLegajo($("#empresa_id").val(), $("#nro_legajo").val())
         //habilitar_grabar();     
    });


     $("#categoria_novedad_id").change(function () {
         if ($("#categoria_novedad_id").val() == 1) {
             habilitar_sanciones();
         }
         else {
             habilitar_felicitaciones();
         }
     
         habilitar_grabar();
    });

    $("#tipo_novedad_id").change(function () {
         habilitar_grabar();     
    });

    $("#tipo_resolucion_id").change(function () {

         if ($("#tipo_resolucion_id").val() >0) 
            $("#divFechaResolucion").show();
          else 
            $("#divFechaResolucion").hide();

         habilitar_grabar();     
    });

    $("#observacion").change(function () {
         habilitar_grabar();     
    });

    $("#fecha_novedad").change(function () {
         habilitar_grabar();     
    });

    $("#fecha_resolucion").change(function () {
         habilitar_grabar();     
    });

    
    $("#responsable_id").change(function () {
         habilitar_grabar();     
    });

    
    $("#ubicacion_id").change(function () {
       if ($("#ubicacion_id").val() == 1 || $("#ubicacion_id").val() == 2) {
            ObtenerSectores($("#ubicacion_id").val(),0);
            $("#divSector").show();
            $("#local_id").val(-1);
            $("#divLocal").hide();
        }
        else {
            ObtenerLocales(0);
            $("#divLocal").show();
            $("#sector_id").val(-1);
            $("#divSector").hide();
        }
        
         habilitar_grabar();     
    });

  function mostrarModalSalida(){
       $("#mdSalir").modal('show');
